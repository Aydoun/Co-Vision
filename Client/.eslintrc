{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": "airbnb",
    "installedESLint": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "redux-saga",
      "react",
      "jsx-a11y"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-empty": 0,
        "key-spacing" : "off",
        "comma-dangle" : "off",
        "no-underscore-dangle": "off",
        "react/jsx-filename-extension" : "off",
        "react/forbid-prop-types": "off",
        "react/sort-comp": "off",
        "indent" : "off",
        "react/jsx-uses-vars": [2],
        "no-console": "off",
        "no-undef" : "off",
        "no-mixed-spaces-and-tabs" : "off",
        "no-irregular-whitespace" : "off"
    }
}
